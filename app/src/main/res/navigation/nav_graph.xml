<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mapsFragment">

    <fragment
        android:id="@+id/login"
        android:name="com.example.coronahelp.fragments.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_login_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="com.example.coronahelp.fragments.RegisterFragment"
        android:label="register_fragment"
        tools:layout="@layout/register_fragment" >
        <action
            android:id="@+id/action_register_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/createAnnouncement2"
        android:name="com.example.coronahelp.fragments.CreateAnnouncementFragment"
        android:label="create_announcement_fragment"
        tools:layout="@layout/create_announcement_fragment" />
    <fragment
        android:id="@+id/announcementList"
        android:name="com.example.coronahelp.fragments.AnnouncementListFragment"
        android:label="announcement_list_fragment"
        tools:layout="@layout/announcement_list_fragment" />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.coronahelp.fragments.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/action_mapsFragment_to_announcementList"
            app:destination="@id/announcementList"
            app:enterAnim="@anim/fragment_fade_enter" />
        <action
            android:id="@+id/action_mapsFragment_to_createAnnouncement2"
            app:destination="@id/createAnnouncement2" />
    </fragment>
</navigation>